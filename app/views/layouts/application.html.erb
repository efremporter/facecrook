<!DOCTYPE html>
<html>
  <head>
    <title>Facecrook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "firstName": "<%= current_user.first_name%>",
          "lastName": "<%= current_user.last_name %>",
          "email": "<%= current_user.email %>"
        }
      </script>
    <% end %>
    <script type="text/javascript">
      window.githubLogo = "<%= image_url('github-logo.png') %>";
      window.linkedInLogo = "<%= image_url('linked-in-logo.png') %>";
      window.homeButton = "<%= image_url('home-button.png') %>";
      window.friendsLogo = "<%= image_url('linked-in-logo.png') %>";
      window.fLogo = "<%= image_url('f-logo.png') %>";
      window.cameraIcon = "<%= image_url('camera-icon.png') %>";
      window.pictureIcon = "<%= image_url('picture-icon.png') %>";
      window.rightArrow = "<%= image_url('right-arrow.png') %>";
      window.checkMark = "<%= image_url('check-mark.png') %>"
      window.commentCameraIcon = "<%= image_url('comment-camera-icon.png') %>"
      window.trashCan = "<%= image_url('trash-can.png') %>"
      window.likeButton = "<%= image_url('like-button.png') %>"
      window.likedButton = "<%= image_url('liked-button.png') %>"
      window.likeLogo = "<%= image_url('like-logo.png') %>"
      window.commentLogo = "<%= image_url('comment-logo.png') %>"
      window.friendsIcon = "<%= image_url('friends-icon.png') %>"
      window.addFriendIcon = "<%= image_url('add-friend-icon.png') %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
